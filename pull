#!/usr/bin/env node

var exec = require('child_process').exec;
var timeout = 100

var poll = function() {
  var cmd = './trytopull'
  var child = exec(cmd, function(err, stdout, stderr) {
    if (stdout) {
      console.log(stdout)
      process.exit(1)
    }
  })
  setTimeout(function() {
    child.kill('SIGKILL')
    poll()
  }, timeout)
}
poll()
